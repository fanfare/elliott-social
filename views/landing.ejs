<% include partials/header %>

<main>
    <% if(currentUser){ %>
        <h2>Bookmarks</h2>
        <% friends.forEach(function(friend) { %>
            <a href="<%= friend.username %>" title="<%= friend.username %> (<%= friend.user.location %>)" class="box small new-block" style="background-color: <%= friend.user.color %> !important;"></a>
        <% }) %>
        <br /><br />
    <% } %>
    
    <h2>Explore</h2>
    
    <% users.forEach(function(user){ %>
        <a href="<%= user.username %>" title="<%= user.username %> (<%= user.user.location %>)" class="box small new-block" style="background-color: <%= user.user.color %> !important;"><%= user.username %></a>
    <% }) %>
</main>

<% include partials/footer %>